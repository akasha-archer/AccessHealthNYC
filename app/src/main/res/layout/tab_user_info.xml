<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/family_size_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/family_size"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/user_profile_prompt_text" />

        <TextView
            android:id="@+id/family_size_entry"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:textSize="@dimen/user_profile_info_text"
            android:textColor="@color/primary_text"
            android:layout_toRightOf="@id/family_size_prompt"
            android:layout_alignBaseline="@id/family_size_prompt"
            />

        <EditText
            android:id="@+id/edit_family_size"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/user_profile_info_text"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/primary_text"
            android:layout_toRightOf="@id/family_size_prompt"
            android:layout_alignBaseline="@id/family_size_prompt"
            android:visibility="invisible"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/family_income_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/family_income"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/user_profile_prompt_text" />

        <TextView
            android:id="@+id/family_income_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$45,000"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:textSize="@dimen/user_profile_info_text"
            android:textColor="@color/primary_text"
            android:layout_toRightOf="@id/family_income_prompt"
            android:layout_alignBaseline="@id/family_income_prompt" />


        <EditText
            android:id="@+id/edit_family_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:textSize="@dimen/user_profile_info_text"
            android:textColor="@color/primary_text"
            android:layout_toRightOf="@id/family_income_prompt"
            android:layout_alignBaseline="@id/family_income_prompt"
            android:visibility="invisible" />

    </RelativeLayout>


</LinearLayout>