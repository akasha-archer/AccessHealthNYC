<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    app:cardBackgroundColor="@color/card_view_background"
                                    app:cardCornerRadius="4dp"
                                    app:cardElevation="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginTop="12dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding_small">

        <TextView
            android:id="@+id/fave_facility_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/facility_name"
            android:text="Location Name"
            />

        <TextView
            android:id="@+id/fave_facility_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/facility_secondary_text_size"
            android:text="Address goes here, street healthFacilityName"
            android:paddingTop="2dp" />

        <TextView
            android:id="@+id/fave_facility_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/facility_secondary_text_size"
            android:text="888-123-4567"
            android:paddingTop="2dp" />

        <TextView
            android:id="@+id/fave_facility_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/facility_secondary_text_size"
            android:text="www.healthFacilityWebsite.com"
            android:paddingTop="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fave_facility_distance_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 miles away"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/facility_distance" />


            <ImageView
                android:id="@+id/fave_favorite_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_action_favorite" />

            <ImageView
                android:id="@+id/fave_share_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/share_btn" />


            <ImageView
                android:id="@+id/fave_maps_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_action_location" />


        </LinearLayout>



    </LinearLayout>




</android.support.v7.widget.CardView>